---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Event from "../components/Event.astro";
---

<Layout>
	<main style="padding:2rem; font-family: sans-serif;">
		<h1 class="encabezado-principal">
			Encabezado Principal (Noto Sans JP Bold 32px)
		</h1>
		<nav>
			<ul style="display:flex; gap:1rem; margin:1rem 0;">
				<li class="menu-texto">Inicio</li>
				<li class="menu-texto">Servicios</li>
				<li class="menu-texto">Contacto</li>
			</ul>
		</nav>
		<h2 class="titulo-secundario">
			Título Secundario (Noto Sans KR Regular 24px)
		</h2>
		<p class="cuerpo-texto">
			Este es un párrafo de ejemplo con Cuerpo de Texto (Montserrat
			Regular 16px, line-height 16px).
		</p>
		<p class="enfasis">
			Este texto está en Énfasis (Montserrat SemiBold 16px).
		</p>
		<button
			class="boton-texto"
			style="padding:0.5rem 1rem; background:var(--color-global); border:none; border-radius:4px;"
		>
			Botón de prueba
		</button>
		<div class="flex justify-center gap-9 flex-wrap">
			<Event
				title="Hackathon athWorks + OAS"
				robotImagePath="/robot.png"
				date="6 - 22 de abril, 2025"
				modality="Virtual"
				description="Desafío de IA para predecir enfermedades. Premios en USD y licencias MATLAB gratis"
				buttonText="Ver más"
				buttonUrl="/eventos/hackathon-mathworks"
			/>

			<Event
				title="Workshop Inteligencia Artificial"
				robotImagePath="/icons/placeholder.png"
				date="15 de mayo, 2025"
				modality="Presencial"
				description="Aprende los fundamentos de IA y crea tu primer modelo en Python. Incluye certificado."
				buttonText="Inscribirse"
				buttonUrl="/eventos/workshop-ia"
				buttonColor="#4A7DFF"
			/>
			<Event
				title="Workshop Inteligencia Artificial"
				robotImagePath="/icons/placeholder.png"
				date="15 de mayo, 2025"
				modality="Presencial"
				description="Aprende los fundamentos de IA y crea tu primer modelo en Python. Incluye certificado."
				buttonText="Inscribirse"
				buttonUrl="/eventos/workshop-ia"
				buttonColor="#4A7DFF"
			/>
		</div>
	</main>
</Layout>
