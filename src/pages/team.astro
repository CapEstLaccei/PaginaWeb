---
import Layout from "../layouts/Layout.astro";
import CarruselEquipo from "../components/CarruselEquipo.astro";

const title = "Equipo LACCEI 2025";
const date = "2 de junio de 2025";
const body = `El equipo LACCEI 2025 está conformado por estudiantes de la carrera de Ingeniería en Sistemas de Información de la UTN Facultad Regional Delta, junto a la docente Ing. Karen Villalba, quien acompaña y coordina al grupo`;
---

<Layout>
    <!-- Imagen de portada -->
    <div
        class="bg-center h-80 bg-cover w-full"
        style={`background-image: url('/assets/foto-grupal.jpeg');  background-position: center 45%`}
        transition:name="BgCard_Image"
    >
    </div>

    <!-- Contenido del post -->
    <div class="max-w-3xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">{title}</h1>
        <p class="text-sm text-gray-500 mb-6">{date}</p>
        <div class="text-base text-gray-800 whitespace-pre-line">
            {body}
        </div>
        <CarruselEquipo />
    </div>
</Layout>
