---
import { Menu, X } from "lucide-astro";
---

<nav
    class="h-[88px] w-full flex items-center justify-between px-4 relative z-50"
    style="padding-right: 16px"
>
    <img src="/assets/LACCEILogo.png" alt="Logo LACCEI" class="h-16 w-auto" />

    <!-- Botón Hamburguesa (solo visible en mobile) -->
    <button
        id="menu-button"
        class="md:hidden text-[var(--color-texto2)] focus:outline-none"
        aria-label="Abrir menú"
    >
        <Menu class="w-6 h-6" id="icon-menu" />
        <X class="w-6 h-6 hidden" id="icon-close" />
    </button>

    <!-- Menú de navegación -->
    <ul
        id="navbar-links"
        class="flex flex-col md:flex-row md:items-center md:space-x-[22px]
    font-['Montserrat'] font-medium tracking-[0.02em]
    text-[var(--color-texto2)]
    text-sm md:text-[18px]
    absolute md:static top-[88px] left-0 w-full md:w-auto bg-white md:bg-transparent shadow-md md:shadow-none px-4 md:px-0 py-4 md:py-0 space-y-4 md:space-y-0 transition-all duration-300 ease-in-out transform -translate-y-full md:translate-y-0 opacity-0 md:opacity-100 pointer-events-none md:pointer-events-auto"
    >
        <li>
            <a
                href="#novedades"
                class="hover:text-[var(--color-texto1)] transition-colors duration-200"
                >Novedades</a
            >
        </li>
        <li>
            <a
                href="#proyectos"
                class="hover:text-[var(--color-texto1)] transition-colors duration-200"
                >Proyectos</a
            >
        </li>
        <li>
            <a
                href="#contacto"
                class="hover:text-[var(--color-texto1)] transition-colors duration-200"
                >Contacto</a
            >
        </li>
        <li>
            <a
                href="#unete"
                class="w-[112px] h-[40px] px-[22px] flex items-center justify-center rounded-md text-white transition-colors duration-200"
                style="background-color: var(--color-global);"
                onmouseover="this.style.backgroundColor='var(--color-enfasis)';"
                onmouseout="this.style.backgroundColor='var(--color-global)';"
            >
                ¡Únete!
            </a>
        </li>
    </ul>
</nav>

<!-- Script para manejar el menú -->
<script is:inline>
    const btn = document.getElementById("menu-button");
    const menu = document.getElementById("navbar-links");
    const iconMenu = document.getElementById("icon-menu");
    const iconClose = document.getElementById("icon-close");

    btn.addEventListener("click", () => {
        const isOpen = menu.classList.contains("opacity-100");
        if (isOpen) {
            menu.classList.replace("opacity-100", "opacity-0");
            menu.classList.replace("translate-y-0", "-translate-y-full");
            menu.classList.replace(
                "pointer-events-auto",
                "pointer-events-none",
            );
            iconMenu.classList.remove("hidden");
            iconClose.classList.add("hidden");
        } else {
            menu.classList.replace("opacity-0", "opacity-100");
            menu.classList.replace("-translate-y-full", "translate-y-0");
            menu.classList.replace(
                "pointer-events-none",
                "pointer-events-auto",
            );
            iconMenu.classList.add("hidden");
            iconClose.classList.remove("hidden");
        }
    });
</script>
