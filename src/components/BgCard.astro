---
import "../styles/global.css";

interface Props {
    enfasisText: string;
    title: string;
    fecha: string;
    backgroundImage: string;
    url: string;
}

const { enfasisText, title, fecha, backgroundImage, url } = Astro.props;
---

<a
    href={url}
    class="group block relative w-[420px] h-[280px] overflow-hidden rounded-[24px] shadow-md cursor-pointer
         transition-transform duration-300 ease-in-out hover:scale-[1.015]"
    aria-label={`${title} · ${fecha}`}
>
    <!-- Imagen con zoom más fuerte -->
    <div
        class="absolute inset-0 z-0 bg-center bg-cover transition-transform duration-300 ease-in-out group-hover:scale-110"
        style={`background-image: url('${backgroundImage}');`}
    >
    </div>

    <!-- Gradiente para contraste -->
    <div
        class="absolute inset-0 z-10 bg-gradient-to-t from-black/80 via-black/30 to-transparent"
    >
    </div>

    <!-- Contenido -->
    <div class="absolute bottom-0 left-0 right-0 z-20 p-5 flex flex-col gap-1">
        <span class="enfasis" style="color: var(--color-secundario);"
            >{enfasisText}</span
        >
        <h2
            class="titulo-secundario mb-2"
            style="color: var(--color-secundario);"
        >
            {title}
        </h2>
        <p class="enfasis text-sm" style="color: var(--color-secundario);">
            {fecha}
        </p>
    </div>
</a>
